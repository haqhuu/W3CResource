#include <stdio.h>
#include <stdlib.h>

/* create a float random number*/
float RandFlt(float left, float right)
{
	return left + ( (float)rand()/RAND_MAX ) * (right - left);
}

int main()
{
	int n;
	float ran;
	
	/* create fptr */
	FILE * fptr = fopen("rand.dat", "w");
	
	/* Input the number of random */
	scanf("%d", &n);
	
	/* write n in the file */
	fprintf(fptr, "%d\n", n);
	
	for (int i = 0; i < n; i++)
	{
		ran = RandFlt(-0.5, 0.5);
		fprintf(fptr, "%f\n", ran);
	}
	
	return 0;
}
